<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/images.css" class="rel">
<div class="row">
    <div id="text" class="mb-3">
        <h1 class="text-center" id="customHeader">Edit Campground</h1>
    </div>
    <div class="col-6 offset-3 mb-4">
        <div class="card shadow">
            <div class="card-body">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title %>" required>
                        <div class="valid-feedback">Valid Input</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]"
                            value="<%=campground.location %>" required>
                        <div class="valid-feedback">Valid Input</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">â‚¬</span>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%=campground.price %>" required>
                            <div class="valid-feedback">Valid Input</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="campground[description]"
                            required><%=campground.description %></textarea>
                        <div class="valid-feedback">Valid Input</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Choose Image(s)</label>
                        <div class="form-file custom-file">
                            <input class="form-control custom-file-input" type="file" id="image" name="image" multiple
                                onchange="previewMultiple(event)">
                            <label for="image" class="form-label custom-file-label" id="fileCounterLabel">No file chosen</label>
                        </div>
                        <div id="formFile"></div>
                    </div>
                    <div class="container">
                        <div class="row justify-content-center mt-4 mb-4">
                          <div class="col-md-6 text-center">
                            <h2>Stored Images</h2>
                            <p class="mt-2">(Check Images to delete)</p>
                          </div>
                        </div>
                    </div>                      
                    <div class="mb-5 text-center">
                        <% var imageCount = 0; %>
                        <div class="row justify-content-center align-items-start mb-3">
                          <% campground.images.forEach(function(img, i){ %>
                            <div class="col-md-4 position-relative">
                              <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                              <div class="form-check position-absolute top-0 end-0">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                              </div>
                            </div>
                            <% imageCount++; %>
                            <% if (imageCount % 3 === 0) { %>
                        </div>
                        <div class="row justify-content-center align-items-start mb-3">
                            <% } %>
                          <% }) %>
                        </div>
                    </div>                      
                    <div class="row">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <button class="btn btn-success w-100">Update Campground</button>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <a href="/campgrounds/<%= campground._id%>" class="btn btn-info w-100">Back To Campground</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
